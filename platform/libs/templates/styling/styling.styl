body
	background-color #fff
	font-family "Avenir Next", "Lato" , "open-sans" , "helvetica" , "helvetica" , caption , sans-serif
	font-size font-size-standard

.email
	a
		color color-primary
	.link-to
		color #fff
		background-color color-primary
		text-decoration none
		outline 0
		padding 1em 2.1em
		text-align center
		border 0
		line-height 1.3em
		font-weight 600
		border-radius border-radius-normal
		margin-top 1.4rem
		display block
	.pasted
		display block
		margin-top 1.4rem
	&-outer
		background-color #fff
		border-radius 10px
		max-width 600px
		width 100%
		display block
		margin 2rem auto
		text-align left
	h4
		font-size font-size-h4
		color body-dark
		margin 1.1rem 0 1.4rem
		line-height 1.8em
	&-inner
		p
			color body-dark
			line-height 1.7rem
	&-header
		padding 2.2rem 0 1.2rem 0
		margin-bottom 1rem
		border-bottom 1px solid border-gray
	&-footer
		border-top 1px solid border-gray
		padding 1.2rem 0 0 0
		margin-top 1.4rem
	small
		display block
		margin-top .7rem
		color text-light
