body
	background-color #fff
	font-family "Avenir Next", "Lato" , "open-sans" , "helvetica" , "helvetica" , caption , sans-serif
	font-size font-size-standard
	height 100%
	background-color background-light-gray

.email
	a
		color color-primary
	.link-to
		color #fff
		background-color color-primary
		text-decoration none
		outline 0
		padding 1em 2.1em
		text-align center
		border 0
		line-height 1.3em
		font-weight 600
		border-radius border-radius-normal
		margin-top 1.4rem
		display block
	.pasted
		display block
		margin-top 1.4rem
	&-outer
		border-radius 10px
		max-width 630px
		width 100%
		display block
		margin 0 auto
		text-align left
	h4
		font-size font-size-h4
		color body-dark
		margin 1.1rem 0 1.4rem
		line-height 1.8em
	&-inner
		padding 2rem 3rem
		background-color #fff
		border-radius 10px
		p
			color body-dark
			line-height 1.7rem
	&-header
		padding 5rem 3rem 2rem 3rem
		margin-bottom 1rem
		text-align center
		.intro
			font-weight 400
			font-size 2rem
			margin 1.8rem 0 0 0
			line-height 2.4rem
			color body-dark
	&-footer
		margin-top .4rem
		padding 1.6rem 3rem 4rem 3rem
		text-align center
	small
		display block
		margin-top .7rem
		color text-light
		&.main
			color body-dark
			margin-top .5rem
			font-weight 600
