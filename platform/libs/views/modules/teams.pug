extends ../layout

block content
	include ../static/dashboard/nav.pug
	.contain
		nav.nav.sub
			h4.what Teams
			.float-right.actions
				.input.sm
					input(type="search", placeholder="Search for a team")
					a #[i.material-icons search]
				a.button.primary.sm(data-modal="open", data-modal-name="modal_team") New team
		.inner#teams
			if (teams.length)
				.grid-row
					.xs-12#ls-teams
						for team in teams
							.unit
								.text-preview(style=`background-color:${team.color}`)
									span= team.name.substr(0,1)
								.content
									.title
										a(href=`/team/${team._id}`)= 	team.name
									small= `Created by ${team.creator.firstname} ${team.creator.lastname}`
								.info
									h6.members #[i.material-icons person_outline]#{team.userlist.length + 1}
									h6.notes #[i.material-icons book]0
			else
				.grid-row
					.xs-12
						.text-red No teams yet! #[a(data-modal="open", data-modal-name="modal_team") Create one]
