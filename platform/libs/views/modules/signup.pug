extends ../layout

block content
	.passport
		.logo
			img(src="images/logo_primary.png", height="50")
		h4 Got an Alpha code? Great!
		p.explanation.sub Create your account below:
		form(autocomplete="off")
			.split
				.input
					input#username(type="text", placeholder="Username", name="username")
				.input
					input#firstname(type="text", placeholder="First name", name="firstname")
				.input
					input#lastname(type="text", placeholder="Last name", name="lastname")
				.input
					input#email(type="text", placeholder="Email", name="email")
			.split
				.input
					input#password(type="password", placeholder="Password", name="password")
				.input
					input#repassword(type="password", placeholder="Repeat password", name="repassword")
			.split
				a#signup.button.primary.button-block Sign up
			small Already have an account?
				a(href="/signin") &nbsp;Sign in
