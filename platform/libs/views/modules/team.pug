extends ../layout

block content
	include ../static/dashboard/nav.pug
	.strip
		.contain
			.about
				h4.what= team[0].name
				h6(contenteditable="true", placeholder="Add a team description...")
			.members
				small Members #[span (#{team[0].userlist.length + 1})]
				for user in team[0].userlist
					.round_action
						img(src=user.avatar)
				.round_action
					img(src=team[0].creator.avatar)
				.round_action.add(data-modal="open", data-modal-name="modal_invite", data-team=team[0]._id)
					i.material-icons add
	.contain
		.inner#teams
			.grid-row
				.xs-12.s-7
					.summary.light
						.grid-row
							.xs-12
								.intro
									.desc
										h5 Activity Updates
								.unit
									h6 #[i.material-icons.text-green note_add] You created a #[a note]
									small 1 minute ago
								.unit
									h6 #[i.material-icons.text-green note_add] You created a #[a note]
									small 1 minute ago
								.unit
									h6 #[i.material-icons.text-green note_add] You created a #[a note]
									small 1 minute ago
				.xs-12.s-5
					.summary
						.grid-row
							.xs-12
								.intro
									.desc
										h5 Members
								.unit
									img.avatar(src=`${team[0].creator.avatar}`)
									h6 #{team[0].creator.firstname} #{team[0].creator.lastname}
									small #{team[0].creator.email}
								for user in team[0].userlist
									.unit
										img.avatar(src=`${user.avatar}`)
										h6= `${user.firstname} ${user.lastname}`
										small= user.email
