extends ../layout

block content
	.passport
		.logo
			img(src="images/logo_primary.png", height="70")
		h4 Welcome back!
		p.explanation.sub Sign in to your account here:
		.split
			.input
				input#username.lg(type="text", placeholder="Email address")
			.input
				input#password.lg(type="password", placeholder="Password")
		.split
			a#signin.button.primary.button-block.lg Sign in
		small Don&#39;t have an account?
			a(href="/signup") &nbsp;Sign up
