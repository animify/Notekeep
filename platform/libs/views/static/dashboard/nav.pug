nav.nav.pin.top(class= shard ? "shard" : "")
	.contain
		if (shard)
			a.logo(href="/")
				img(src="/images/logo_dark.png")
		else
			a.logo(href="/")
				img(src="/images/logo_white.png")
		if (user)
			.float-right
				ul.options
					if (!shard)
						li(class= selected == "dashboard" ? "active" : "")
							a(href="/") Dashboard
						li(class= selected == "notes" ? "active" : "")
							a(href="/notes") Notes
						li(class= selected == "teams" ? "active" : "")
							a(href="/teams") Teams
					else
						li
							a.present #[i.material-icons present_to_all] Presentation mode

					li(class= selected == "activity" ? "active" : "")
						a(href="/activity") #[i.material-icons notifications]
				.user.dropdown.right
					a.toggle
						svg(data-jdenticon-hash=user.avatar)
						span= user.username
							i.material-icons arrow_drop_down
					ul.menu
						li.header= user.firstname + ' ' + user.lastname
						li.header.sub= user.email
						li.divider
						li #[a(href="/invites") Invites]
						li #[a(href="/settings") My Account]
						li #[a(href="/teams") Manage Teams]
						li #[a.text-red Sign Out]
		else
			.float-right
				ul.options
					li
						a(href="/signin") Sign in
					li
						a(href="/signup") Sign up
