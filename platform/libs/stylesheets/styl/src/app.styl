html
	min-height 100%
	width 100%
	height 100%
	&.auto
		height auto

body
	cf()
	min-height 100%
	height 100%
	color text-grey
	&.light
		background-color color-smoke

p.sub
	color body-color

.select
	box-shadow inset 0 0 2px border-gray
	width 1.6em
	height 1.6em
	border-radius border-radius-normal
	content ''
	display inline-block
	&.selected
		box-shadow inset 0 0 20px color-green


.passport
	center(800px, 20px)
	text-align center
	padding-bottom 10em
	cf()
	small
		margin-top 1.4em
		display block
	p.explanation
		padding .7em 0 2.5em 0
		letter-spacing .4px
	.logo
		padding 4.6em 0 4em 0
		img
			height 2.4em
	.split
		.button
			display block
			margin 0 auto
			width 100%
			max-width 24em
			height em-height
		.input + .input
			input
				margin-top .7em
		& + .split
			margin-top 1.6em

ul.options
	margin-bottom 1.4em
	li
		padding .4em 0
		display inline-block
		vertical-align top
		a
			color text-lighter-link
			cursor pointer
			&:hover
				color text-lighter-link-hover
		&.active a
			color primary-color
		& + li
			margin-left 2.8em

nav.nav
	display block
	width 100%
	height 4.2em
	background-color #fff
	relative top left
	z-index 2000
	&.sub
		height 7em
		position relative
		overflow hidden
		position relative
		z-index 1800
		h4.what
			padding 1.5em 0
			vertical-align top
			float left
			font-weight 400
		.floating-icon
			display inline-block
			vertical-align top
			text-align center
			margin 1.5em 0 0 0
			transition all .14s ease
			&:hover
				cursor pointer
				i
					opacity 1
			& + .floating-icon
				margin-left 2.8em
			i
				display block
				font-size 1.8em
				margin-bottom .32em
				opacity .85
			span
				color text-grey
				letter-spacing -.4px
	.float-right > *
		display inline-block
		vertical-align top
	.logo
		img
			height 1.4em
			relative top 1.5em
			cf()
	.user
		line-height 1.7em
		relative top 1.22em
		cursor pointer
		&:hover span, &.open span
			color text-grey
		span
			vertical-align top
			text-transform capitalize
			margin-left .6em
			color text-light
			transition .14s ease all
		img
			height 1.66em
			border-radius 50%

	ul.options
		line-height 3.4em
		padding-right 2em
		margin 0
		li
			a
				transition .14s ease all
			i
				color text-lighter
				relative top .25em
				&:hover
					color inherit
			&.active
				a, i
					color text-grey
			& + li
				margin-left 2.4em

.inner
	padding 2.6em 0
	h2.what
		font-weight 400
		margin-bottom 1.2em
		font-size 2.1em
	h3.what
		font-weight 400
		margin-bottom .8em
		font-size 1.1em
	&#settings
		.input h6
			font-size font-size-standard
			line-height 1em
			margin-bottom .8em

.section
	border 1px solid border-gray
	padding 2.5em 2.6em
	border-radius border-radius-xl
	background-color #fff
	box-shadow: 0 1px 1px 0 box-shadow-gray
	.sub
		display block
		padding .3em 0 .7em 0
		border-bottom 1px solid border-gray
		width 100%
		cf()
		font-size 1.4em
		margin-bottom 1.6em
	.input + .input
		margin-top 2.2em
	& + .section
		margin-top 2em
	.button
		margin-top 1.4em
	&.note
		text-align center
		font-weight 600
		position relative
		padding 3.5em 0 0 0
		.type
			margin .6em 0
			display block
			text-transform uppercase
			color text-lighter
			font-weight 900
			font-size .8em
		.body
			padding 0 4em 3em 4em
		.footer
			text-align left
			padding 1em 2em
			font-size .8em
			border-top 1px solid border-gray
			cf()
			.created
				float left
				vertical-align top
			.date
				float right
				vertical-align top
		&:hover
			border-color color-primary
			cursor pointer
			h4
				color color-primary
		h4
			font-size 1.8em
		p
			color text-light
			font-weight 400
			margin-top 1em

.notes
	width 26%
	display inline-block
	vertical-align top
	height 100%
	absolute top left
	z-index 1000
	min-width 18em
	max-width 40em
	border-right 1px solid color-smoke
	.tip
		padding 2em 3.6em
		color text-light
		font-size .86em
	.note
		padding 1.4em 2.6em
		background-color #fff
		position relative
		&::after
			absolute top left
			width 100%
			height 1px
			background-color color-smoke
			content ''
		&.new
			display none
		&.open
			border-right 3px solid color-primary
		&:last-of-type
			border-bottom 1px solid color-smoke
		h3
			font-size 1.2em
		p
			color text-light
			overflow ellipsis
			line-height 1.8em
		small
			color text-lighter

.fit
	margin-top 11.2em
	background-color #fff
	height calc(100% - 11.2em)
	overflow-y scroll
	position relative

.display
	width 74%
	display inline-block
	vertical-align top
	height 100%
	absolute top right
	.empty
		display none
		i
			color color-red
			margin-bottom .2em
			font-size 4em
		p
			line-height 1.8em
			color text-light
	.fit
		background-color color-smoke
		border-top 1px solid color-smoke
	.filled
		background-color #fff
		height 100%
		width 100%
		padding 3.3em 4em
		overflow-y auto
		overflow-x hidden
		.note_header
			margin-bottom 2.4em
			position relative
			&::after
				height 1px
				width 4em
				content ' '
				absolute bottom -1.2em left 4.25em
				background-color border-gray
			& > *
				display inline-block
				vertical-align top
			&-avatar
				margin-right 1em
			img
				height 3.25em
				width 3.25em
				border-radius border-radius-xl
			small
				color text-lighter
				line-height 1.4em
			h3
				font-weight 800
				line-height 1em
				&[contenteditable=true]:empty:before
					content attr(placeholder)
					display block
				&:focus
					&[contenteditable=true]:empty:before
						color text-lightest
.recent + .recent
	margin-top 1.4em
