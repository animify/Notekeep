html
	min-height 100%
	width 100%
	height 100%
	&.auto
		height auto

body
	cf()
	min-height 100%
	height 100%
	color text-grey
	text-shadow 1px 1px 1px rgba(0,0,0,0.004)
	text-rendering optimizeLegibility !important
	-webkit-font-smoothing antialiased !important
	&.light
		background-color #fff

p.sub
	color body-color

.select
	box-shadow inset 0 0 2px border-gray
	width 1.6em
	height 1.6em
	border-radius border-radius-normal
	content ''
	display inline-block
	&.selected
		box-shadow inset 0 0 20px color-green


.passport
	center(800px, 20px)
	text-align center
	padding-bottom 10em
	cf()
	small
		margin-top 1.4em
		display block
	p.explanation
		padding .7em 0 2.5em 0
		letter-spacing .4px
	.logo
		padding 4.6em 0 4em 0
		img
			height 2.4em
	.split
		.button
			display block
			margin 0 auto
			width 100%
			max-width 24em
			height em-height
		.input + .input
			input
				margin-top .7em
		& + .split
			margin-top 1.6em

ul.options
	margin-bottom 1.4em
	li
		padding .14em 0
		display inline-block
		vertical-align top
		a
			color text-light
			cursor pointer
			i
				font-size 1.4rem
			&:hover
				color text-lighter-link-hover
		&.active a
			color primary-color
		& + li
			margin-left 2.8em

nav.nav
	display block
	width 100%
	height 3.6em
	background-color #24292E
	z-index 2000
	fixed top left
	&.sub
		background-color transparent
		position relative
		z-index 1800
		width 100%
		display block
		cf()
		height auto
		margin 5em 0 0 0
		border 0
		padding 0
		box-shadow none
		h4.what
			padding 2.1rem 0 0 0
			vertical-align top
			float left
			font-size 2.1em
			i
				font-size 1em
				relative top 6px
				color text-light-invert
				cursor pointer
				&:hover
					color text-grey

		h6.what
			padding 2.8rem 0
			display block
			vertical-align top
			float right
			font-weight 400
			span
				font-weight 500
		.actions
			relative top 2.7em
			.button + .button
				margin-left 1.3rem
	.float-right
		& > *:not(.switches)
			display inline-block
			vertical-align top
	.logo
		img
			height 1.2em
			relative top 1.05rem
			cf()
	.user
		line-height 1.5rem
		relative top .875rem
		cursor pointer
		&:hover span, &.open span
			color #fff
		span
			vertical-align top
			text-transform capitalize
			margin-left .6em
			color text-light-invert
			font-weight 600
			transition .14s ease all
		img
			height 1.6em
			border-radius 50%

	ul.options
		line-height 3rem
		padding-right 2rem
		margin 0
		li
			a
				transition .14s ease all
				color text-light-invert
				font-weight 600
				&:hover
					color #fff
			i
				color text-lighter
				relative top .28em
				&:hover
					color inherit
			&.active
				a, i
					color #fff
			& + li
				margin-left 2.4em

.inner
	padding 2.6em 0
	h2.what
		margin-bottom 1.2em
		font-size 2.1em
	h3.what
		margin-bottom .8em
		font-size 1.1em
	h4.what
		font-weight 800
	h6.what
		color text-light
	&#settings
		.section
			display none
			margin-top 0 !important
			&#profile
				display block
		.list
			margin-top 1.1rem
			border-top 1px solid border-gray
			padding-top 1em
		.item
			padding .8rem 0
			&.active
				a
					color color-primary
					opacity 1
					padding .14em 0 .14em 1.3em
					&:before
						height 100%
						absolute left top
						width 2px
						background-color color-primary
						content ''
						display block
			a
				font-weight 500
				padding .14em 0 .14em 0
				position relative
				font-size 1.1em
				opacity .6
				&:hover
					color color-primary
					opacity 1
		.input h6
			font-size font-size-standard
			line-height 1em
			color body-color
			font-weight 400
			margin-bottom .6rem

.strip
	padding 8rem 0 1.6rem 0
	width 100%
	display block
	position relative
	text-align center
	.members
		margin-top .6rem
		margin-left .3rem
		.member_ci
			display inline-block
			vertical-align top
			margin-left -.3rem
			&.add
				height 2.3em
				width 2.3em
				border 2px dashed border-gray
				box-shadow 0 0 0 4px #fff
				border-radius 50%
				background-color #fff
				cursor pointer
				transition all .14s ease
				i
					color text-light
					line-height 1.44em
					font-size 1.4em
				&:hover
					border 2px solid color-green
					i
						color color-green
			img
				height 2.3em
				width 2.3em
				border-radius 50%
				box-shadow 0 0 0 4px #fff
	small
		color text-light
		font-weight 500
		font-size 1em
		margin-top .6rem
		display block

.section
	padding 2.3em 3em
	border-radius border-radius-normal
	background-color #fff
	box-shadow 0 1px 1px 0 box-shadow-gray
	border 1px solid border-gray

	.sub
		display block
		padding .3em 0 .7em 0
		border-bottom 1px solid border-gray
		width 100%
		cf()
		font-size 1.4em
		margin-bottom 1.6em
		& > h3
			font-size 1em
		& > p
			font-size 1rem
			color text-light
	.input + .input
		margin-top 2.2em
	& + .section
		margin-top 2em
	.button
		margin-top 1.4em
	&.note
		text-align center
		font-weight 600
		position relative
		padding 3.5em 0 0 0
		.type
			margin .6em 0
			display block
			text-transform uppercase
			color text-lighter
			font-weight 900
			font-size .8em
		.body
			padding 0 4em 3em 4em
		.footer
			text-align left
			padding 1em 2em
			font-size .8em
			border-top 1px solid border-gray
			cf()
			.created
				float left
				vertical-align top
			.date
				float right
				vertical-align top
		&:hover
			border-color color-primary
			cursor pointer
			h4
				color color-primary
		h4
			font-size 1.8em
		p
			color text-light
			font-weight 400
			margin-top 1em
.nosub
	margin-top 4.2em

.summary
	border 1px solid border-gray
	border-radius 10px
	overflow hidden
	&:not(.nohover) .unit
		&:hover
			cursor pointer
			h6
				color color-primary
	&.light
		.unit
			h6
				font-weight 500
				font-size .925rem
			small
				line-height 1.4rem
	.intro
		background-color background-lightest-gray
		padding .9rem 1.4rem
	& + .summary
		margin-top 2rem
	.desc
		& > *
			display inline-block
			vertical-align top
		h5
			font-weight 600
			color text-grey
			line-height 1.5em
			font-size 1.1rem
			letter-spacing -0.03em
	.text-preview
		height 1.7rem
		background-color color-purple
		text-align center
		color #fff
		font-weight 800
		line-height 1.7rem
		text-transform uppercase
		font-size .875em
		border-radius border-radius-normal
		width 1.7rem
		margin-right 1rem
		display inline-block
		vertical-align top
		text-shadow rgba(18,19,22,.15) 1px 2px 1px
	.unit
		padding .7rem 1.4rem
		position relative
		width 100%
		display block
		&.new
			display none
		& + .unit
			border-top 1px solid border-gray
		&.new
			display none
		img.avatar
			height 1.7rem
			margin-right .8rem
			border-radius 10px
		h6
			line-height 1.6em
			display inline-block
			vertical-align top
			color body-dark
			font-size 1rem
			span
				font-weight 500
				color text-light
			i
				font-size 1.1rem
				relative top 4px
				margin-right .5rem
		.content_plain
			width 100%
			display block
			cf()
			p
				color text-light
				overflow ellipsis
				font-size .825rem
				line-height 1.4rem
				font-weight 500
		span.actions
			display inline-block
			vertical-align top
			line-height 1.6rem
			float right
			a
				font-weight 500
				color body-dark
				&.clr-accept:hover
					color color-green
				&.clr-decline:hover
					color color-red
				& + a
					margin-left 1rem
		small
			display inline-block
			float right
			vertical-align top
			line-height 2em
			color text-light
			i
				font-size 1rem
				relative top 3px
				color text-lighter
				margin 0 .2rem 0 .5rem

.display
	.empty
		display none
		i
			color color-red
			margin-bottom .2em
			font-size 4em
		p
			line-height 1.8em
			color text-light
	.fit
		background-color color-smoke
		border-top 1px solid color-smoke
	.filled
		background-color #fff
		height 100%
		width 100%
		padding 3.3em 4em
		overflow-y auto
		overflow-x hidden
		.note_header
			margin-bottom 2.4em
			position relative
			&::after
				height 1px
				width 4em
				content ' '
				absolute bottom -1.2em left 4.25em
				background-color border-gray
			& > *
				display inline-block
				vertical-align top
			&-avatar
				margin-right 1em
			img
				height 3.25em
				width 3.25em
				border-radius border-radius-xl
			small
				color text-lighter
				line-height 1.4em
			h3
				font-weight 600
				line-height 1em
				&[contenteditable=true]:empty:before
					content attr(placeholder)
					display block
				&:focus
					&[contenteditable=true]:empty:before
						color text-lightest
.recent + .recent
	margin-top 1.4em

.editor
	background-color #fff
	display none
	height 100%
	width 100%
	fixed top left
	z-index 9400
	.options
		border-bottom 1px solid border-gray
		padding 1em 2em
		cf()
		background-color #fff
		fixed top left
		z-index 4000
		width 100%
		.close, .publish
			margin-left 1em
			padding-left 1em
			border-left 1px solid border-gray
			display inline-block
			vertical-align top
		.close
			border-left 0
		&.bottom
			background-color color-smoke
			border-bottom 0
			absolute bottom 0
			width 100%
		.float-right
			& > * + *
				margin-left 1em
			.menu
				margin-top .6em
		& > *

			h6
				display inline-block
				vertical top
				color text-light
				line-height 1.9em
				margin .2rem 0 .2rem 1rem
				&.team
					font-weight 600
					color text-grey
				& + h6
					padding-left 1em
					border-left 1px solid border-gray
		.priority
			.button
				i
					font-size .7rem
					relative top 1px left -.2rem
					width auto
			li
				i
					font-size .7rem
					relative top 2px
					width 1.7rem

.editable
	width 100%
	height 100%
	overflow hidden
	padding-top 4.2rem
	.note_container
		overflow-y auto
		position relative
		height 100%
		&::-webkit-scrollbar:horizontal
			display none
		&::-webkit-scrollbar
			width .6rem
			background-color transparent
		&::-webkit-scrollbar-thumb
			background-color darken(#fff, 17%)
		&::-webkit-scrollbar-corner
			display none
	.note_editable
		width 100%
		max-width 740px
		margin 0 auto
		display block
		padding-bottom 2rem
	.note_headroom
		padding 3em 0
		p
			color text-light
			line-height 1.7em
			font-weight 600
			span
				& + span
					margin-left .3rem
				&.draft
					color color-yellow
					&:before
						content '- Draft'
				&.published
					color color-green
					&:before
						content '- Published'
		h3
			line-height 1em
			font-weight 800
			position relative
			&:after
				content ''
				width 2.4em
				height 1px
				border-bottom 1px solid border-gray
				display block
				absolute bottom -1.4rem left 0
			&:empty:before
				content 'Untitled'
				display block
				color text-grey
			&:focus:empty:before
				content 'Untitled'
				display block
				color text-light
	.note_content
		font-size 1.2em
		line-height 1.6em
