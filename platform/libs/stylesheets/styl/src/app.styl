html
	min-height 100%
	width 100%
	height 100%
	&.auto
		height auto

body
	cf()
	min-height 100%
	height 100%
	color text-grey
	text-shadow 1px 1px 1px rgba(0,0,0,0.004)
	text-rendering optimizeLegibility !important
	-webkit-font-smoothing antialiased !important
	&.light
		background-color background-lightest-gray

p.sub
	color body-color

.select
	box-shadow inset 0 0 2px border-gray
	width 1.6em
	height 1.6em
	border-radius border-radius-normal
	content ''
	display inline-block
	&.selected
		box-shadow inset 0 0 20px color-green

#input-shared_link
	display none

.passport
	center(800px, 20px)
	text-align center
	padding-bottom 4rem
	cf()
	small
		margin-top 1.4em
		display block
	p.explanation
		padding .7em 0 2.5em 0
		letter-spacing .4px
	.logo
		padding 7em 0 4em 0
		img
			height 2.4em
	.split
		.button
			display block
			margin 0 auto
			width 100%
			max-width 24em
			height em-height
		.input + .input
			input
				margin-top .7em
		& + .split
			margin-top 1.6em

ul.options
	margin-bottom 1.4em
	li
		padding .14em 0
		display inline-block
		vertical-align top
		a
			color text-light
			cursor pointer
			i
				font-size 1.4rem
			&:hover
				color text-lighter-link-hover
		&.active a
			color primary-color
		& + li
			margin-left 2.8em

nav.nav
	display block
	width 100%
	height 3.375rem
	background-color color-nav
	z-index 2000
	fixed top left
	.float-right
		& > *:not(.switches)
			display inline-block
			vertical-align top
	.logo
		img
			height 1.4em
			relative top 1rem
			cf()
	.user
		line-height 1.5rem
		relative top .875rem
		cursor pointer
		padding-left 2rem
		&:hover span, &.open span
			color #fff
		span
			vertical-align top
			text-transform capitalize
			margin-left .6em
			color text-light-invert
			font-weight 600
			transition .14s ease all
		svg
			height 1.6em
			width 1.6em
			background-color #fff
			border-radius 3px

	ul.options
		line-height 3rem
		margin 0
		li
			a
				transition .14s ease all
				color text-light-invert
				font-weight 600
				&:hover
					color #fff
			i
				color text-lighter
				relative top .28em
				&:hover
					color inherit
			&.active
				a, i
					color #fff
			& + li
				margin-left 2.3rem
	&.shard
		background-color transparent
		&.presentation
			.contain
				max-width 100%
		ul.options li
			a
				color body-dark
				i
					color text-light
				&.present
					i
						margin-right .3rem
				&:hover
					color dark-color
		.user
			span
				color body-dark
			&:hover span, &.open span
				color dark-color
.inner
	padding 2.6em 0
	h2.what
		margin-bottom 1.2em
		font-size 2.1em
	h3.what
		margin-bottom .8em
		font-size 1.1em
	h4.what
		font-weight 800
	h6.what
		color text-light
	&#settings
		.section
			display none
			margin-top 0 !important
			&#profile
				display block
		.list
			margin-top 1.1rem
			border-top 1px solid border-gray
			padding-top 1em
		.item
			padding .8rem 0
			&.active
				a
					color color-primary
					opacity 1
					padding .14em 0 .14em 1.3em
					&:before
						height 100%
						absolute left top
						width 2px
						background-color color-primary
						content ''
						display block
			a
				font-weight 500
				padding .14em 0 .14em 0
				position relative
				font-size 1.1em
				opacity .6
				&:hover
					color color-primary
					opacity 1
		.input h6
			font-size font-size-standard
			line-height 1em
			color body-color
			margin-bottom .6rem
			font-weight 500

.strip
	padding 6.5rem 0 3.3rem 0
	width 100%
	display block
	position relative
	background-color color-nav-lighter
	cf()
	z-index 30
	&.has-selection
		padding-bottom 5.2rem
	.selection
		absolute bottom 0
		width 100%
		li
			display inline-block
			vertical-align top
			font-weight 500
			padding 1.2rem 0
			p
				color #fff
				line-height 1rem
				i
					font-size 1rem
					line-height .4rem
					color text-light-invert
					relative top 4px
					margin-right .2rem
			&.active
				a
					color #fff
					font-weight 600
			a
				color text-light-invert
				line-height 1rem
				display block
			& + li
				margin-left 3.4rem
	.avatar
		height 4.6rem
		width 4.6rem
		background-color #fff
		border-radius 3px
		margin-right 1.5rem
		display inline-block
		vertical-align top
	.text-preview
		text-shadow rgba(27,39,51,0.13) 1px 2px 2px
		height 2.4rem
		background-color #fff
		text-align center
		color #fff
		font-weight 800
		line-height 2.08rem
		text-transform uppercase
		font-size .875em
		border-radius 10px
		width 2.4rem
		margin-right .6rem
		display inline-block
		vertical-align top
		border 3px solid rgba(color-nav,.08)
		font-size 1.4rem
		relative top 3px
	.bind > .float-right
		margin-top .7rem
		& > *:not(.switches)
			display inline-block
			vertical-align top
	.about
		display inline-block
		vertical-align top
		max-width 40em
		&.nodesc
			margin-top .8rem
	h6
		font-weight 500
		color text-light-invert
		&[contenteditable=true]:empty:before
			content attr(placeholder)
			display block
			color text-light
		&:focus
			&[contenteditable=true]:empty:before
				color text-lightest
	h4.what
		display block
		vertical-align top
		line-height 1.4em
		font-size 2.1em
		color #fff
		i.switch_trigger
			color text-light-invert
			cursor pointer
			relative top 3px
		i.settings
			font-size 1.2rem
			color text-light-invert
			margin-left .6rem
			&:hover
				color #fff
				cursor pointer
	.members
		margin-top .5rem
		display inline-block
		vertical-align top
		text-align right
		float right
		.round_action
			display inline-block
			vertical-align top
			text-align center
			& + .round_action
				margin-left -.7rem
			&.add
				height 2.3em
				border 2px solid transparent
				box-shadow 0 0 0 4px color-nav
				border-radius 15px
				background-color #fff
				cursor pointer
				transition all .14s ease
				font-weight 600
				padding 0 .6rem 0 .3rem
				line-height 1.9rem
				i
					color color-green
					font-size 1.34em
					relative top 5px
				&:hover
					border 2px solid color-green
					i
						color color-green
			svg
				height 2.3em
				width 2.3em
				border-radius 50%
				box-shadow 0 0 0 4px color-nav
				background-color #fff
	small
		color #fff
		font-weight 500
		font-size 1em
		margin-bottom .6rem
		display block
		line-height 1rem
		span
			color text-light

.section
	border-radius border-radius-normal
	background-color #fff
	box-shadow 0 1px 1px 0 box-shadow-gray
	border 1px solid border-gray
	.sub
		display block
		padding 2.1rem 2.2rem 1.9rem 2.2rem
		width 100%
		border-bottom 1px solid border-gray
		cf()
		font-size 1.4em
		& > h3
			font-size 1.14em
			line-height 1.3em
		& > p
			font-size 1rem
			color text-light
	.content
		padding 2rem 2.2rem 2rem 2.2rem
	.input + .input
		margin-top 2.2em
	.button
		margin-top 1.4em

.summary
	border 1px solid border-gray
	border-radius 10px
	overflow hidden
	&:not(.nohover) .unit
		&:hover
			cursor pointer
			h6
				color color-primary
	&.light
		.unit
			h6
				font-weight 500
				font-size .925rem
			small
				line-height 1.4rem
	.intro
		background-color background-light-gray
		padding .8rem 1.2rem
	& + .summary
		margin-top 2rem
	.desc
		& > *
			display inline-block
			vertical-align top
		h5
			font-weight 600
			color text-grey
			line-height 1.5em
			font-size 1.04rem
			letter-spacing -0.03em
	.text-preview
		text-shadow rgba(27,39,51,0.13) 1px 2px 2px
		height 1.7rem
		background-color #fff
		text-align center
		color #fff
		font-weight 800
		line-height 1.4rem
		text-transform uppercase
		font-size .875em
		border-radius 10px
		width 1.7rem
		margin-right .6rem
		display inline-block
		vertical-align top
		border 2px solid rgba(color-nav,.08)
	.unit
		padding .64rem 1.2rem
		position relative
		width 100%
		display block
		background-color #fff
		&.removed
			p
				opacity .5
				text-decoration line-through
		&.new
			display none
		& + .unit
			border-top 1px solid border-gray
		&.new
			display none
		svg.avatar
			height 1.5rem
			width 1.5rem
			margin-right .4rem
			border-radius 4px
		p, h6
			line-height 1.6em
			display inline-block
			vertical-align top
			color body-dark
			font-size 0.92rem
			&.medium-p
				&::before
					content '!! '
					color color-yellow
			&.high-p
				&::before
					content '!!! '
					color color-red
			span
				font-weight 500
				color text-light
			i
				font-size 1rem
				relative top 3px
				margin-right .5rem
		.content_plain
			width 100%
			display block
			cf()
			p
				color text-light
				overflow ellipsis
				font-size .825rem
				line-height 1.4rem
				font-weight 500
		span.actions
			display inline-block
			vertical-align top
			line-height 1.6rem
			float right
			a
				font-weight 500
				color body-dark
				&.clr-accept:hover
					color color-green
				&.clr-decline:hover
					color color-red
				& + a
					margin-left 1rem
		small
			display inline-block
			float right
			vertical-align top
			line-height 2em
			color body-dark
			font-weight 500
			color text-light
			span
				margin-left .8rem
				min-width 10rem
				display inline-block
				text-align right
			i
				font-size 1rem
				relative top 3px
				color text-lighter
				margin 0 .2rem 0 .5rem

.recent + .recent
	margin-top 1.4em

.editor
	background-color #fff
	display none
	height 100%
	width 100%
	fixed top left
	z-index 9400
	.presentation_tools
		display none
		.present
			color color-primary !important
	&.presentation
		ul.options
		display none
		.options
			display none
		.presentation_tools.options
				display block
				background-color #fff
				border-bottom 1px solid border-gray
				h6
					color body-dark
				.invert
					i
						color body-dark
		.editable
			width 100%
			.note_headroom
				svg, p
					display none
			.note_container
				padding 0
			.note_editable
				width 100%
				font-size 2.6rem
				padding 4rem 7rem
				max-width 100%
				border-radius 0
				border 0
	&.shard
		z-index 0
		display block
		.editable
			padding 3.375rem 0 5rem 0
		&.presentation
			.editable
				padding 3.375rem 0 0 0
	.options
		cf()
		background-color color-nav
		fixed top left
		z-index 4000
		width 100%
		height 3.375rem
		padding 0 2rem
		.close
			margin-left 1em
			padding-left 1em
			display inline-block
			vertical-align top
			border-left 0
		.publish
			a
				font-weight 800
				color #fff
				position relative
				&::after
					width 100%
					border-bottom 1px dashed text-light-invert
					height 1px
					content ' '
					absolute bottom -3px left
				&:hover
					&::after
						border-color #fff
		&.bottom
			background-color color-smoke
			border-bottom 0
			absolute bottom 0
			width 100%
		.float-right
			& > * + *
				margin-left 2.3rem
			.menu
				margin-top .6em
		& > *
			display inline-block
			vertical-align top
			h6
				display inline-block
				vertical-align top
				color text-light-invert
				line-height 1.4em
				margin .9rem 0 .9rem 1rem
				&.group
					font-weight 600
					color #fff
				& + h6
					padding-left 1em
					border-left 1px solid border-gray
		.invert
			color text-light-invert
			background-color transparent
			line-height 1.3em
			font-weight 600
			cf()
			display inline-block
			position relative
			line-height 3.3rem
			.presentation_tools

			&:hover
				color #fff
				background-color transparent
			&.hasicon
				i
					font-size 1.7rem
					relative top 8px
				&.return
					i
						font-size 1.3rem
						relative top 6px
		.priority
			i
				font-size .6rem !important
				absolute left -.24rem
				top 0 !important
				width auto
			li
				i
					font-size .6rem
					relative top 2px
					width 1.7rem

.editable
	width 100%
	height 100%
	overflow hidden
	padding-top 3.375rem
	background-color #f4f6f7
	.note_container
		overflow-y auto
		position relative
		height 100%
		padding 2rem 0
		&::-webkit-scrollbar:horizontal
			display none
		&::-webkit-scrollbar
			width .6rem
			background-color transparent
		&::-webkit-scrollbar-thumb
			background-color darken(#fff, 17%)
		&::-webkit-scrollbar-corner
			display none
	.note_editable
		width 100%
		max-width 840px
		margin 0 auto
		display block
		padding 3.6rem 4.4rem
		background-color #fff
		border 1px solid color-smoke
		box-shadow 0 1px 1px 0 box-shadow-gray
		border-radius 10px
		min-height 100%
	.note_headroom
		padding 0 0 1rem 0
		position relative
		margin-bottom 2rem
		svg.avatar
			height 4em
			width 4em
			background-color light-color-smoke
			margin-right .8rem
		svg.avatar, .note_desc
			display inline-block
			vertical-align top
		&:after
			content ''
			width 6rem
			height 1px
			border-bottom 1px solid border-gray
			display block
			absolute bottom -.8rem left 0
		p
			color text-light
			line-height 1.7em
			font-weight 600
			span
				& + span
					margin-left .3rem
				&.draft
					color color-yellow
					&:before
						content '- Draft'
				&.published
					color color-green
					&:before
						content '- Published'
		h3
			line-height 1em
			font-weight 800
			position relative
			&:empty:before
				content 'Untitled'
				display block
				color text-grey
			&:focus:empty:before
				content 'Untitled'
				display block
				color text-light
	.note_content, .readonly-note
		font-size 1.1em
		line-height 1.5em

#hidden_copy
	display none
	absolute top -20em left -20em

