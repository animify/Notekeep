.dropdown
	position relative
	display inline-block
	&.disabled
		.toggle
			opacity .4
			pointer-events none
			cursor default
	.toggle
		cursor pointer
	&.floating
		.menu
			margin-top 1em
	&.open
		.menu
			display block
	.menu
		background-color #fff
		absolute top 2em left 0
		border 1px solid border-gray
		border-radius border-radius-normal
		min-width 15em
		z-index 2000
		display none
		padding .4em 0
		box-shadow: 0 1px 1px 0 box-shadow-gray
	li
		font-size 1em
		display block
		text-align left !important
		padding .18em 0
		i
			width 1.3em
		&.divider
			margin .4em 0
			border-color #e5e5e6 !important
			padding .18em 0 0 0 !important
		&.disabled
			opacity .4
			pointer-events none
			cursor default
		&.header
			color body-dark
			padding 1.1em 1.6em 0.5em 1.6em
			font-size 1em
			font-weight 500
			&.sub
				color text-lighter-link
				font-size 1em
				font-weight 300
			& + .header
				padding-top 0
		&:hover
			a
				color color-primary
		a
			color body-dark
			display block
			padding 0.3em 1.6em
	&.right
		.menu
			left auto
			right 0
	&.upward
		.menu
			top auto
			bottom 2em
	.sub
		left 180px
