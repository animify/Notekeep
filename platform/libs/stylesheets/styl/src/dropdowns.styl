.dropdown
	position relative
	display inline-block
	&.disabled
		.toggle
			opacity .4
			pointer-events none
			cursor default
	.toggle
		cursor pointer
	&.floating
		.menu
			margin-top 1em
	&.open
		.menu
			display block
	.menu
		background-color #fff
		absolute top 2em left 0
		border 1px solid border-gray
		border-radius border-radius-normal
		min-width 19em
		z-index 2000
		display none
		padding .4em 0
		box-shadow 0 1px 6px 1px rgba(0,0,0,0.05)
	li
		font-size 1em
		display block
		text-align left !important
		i
			width 1.3em
		&.divider
			margin .4em 0
			border-color #e5e5e6 !important
			padding .18em 0 0 0 !important
		&.disabled
			opacity .4
			pointer-events none
			cursor default
		&.header
			color body-dark
			padding 0.8rem 1rem
			margin 0 .4rem
			font-weight 600
			font-size 1.1em
			&.sub
				color text-light
				font-size 1em
				font-weight 500
			& + .header
				padding 0.8rem 1rem
				margin -1.4rem .4rem 0 .4rem
		&:hover
			a
				color color-primary
				&.color-red
					color color-red
		a
			color body-dark
			display block
			padding 0.8rem 1rem
			margin 0 .4rem
			font-weight 500
	&.right
		.menu
			left auto
			right 0
	&.upward
		.menu
			top auto
			bottom 2em
	.sub
		left 180px
