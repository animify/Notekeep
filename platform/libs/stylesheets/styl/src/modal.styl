.modal
	width 100%
	height 100%
	pointer-events none
	.overlay
		width 100%
		height 100%
		background-color #fff
		fixed top left
		z-index 9000
		opacity 0
		display table
		transition all .3s cubic-bezier(.165,.84,.44,1)
	.cell
		display table-cell
		vertical-align middle
		cf()
	.content
		width 510px
		display block
		margin 0 auto
		transform scale(.3)
		visibility hidden
		opacity 0
		position relative
		transition all .3s cubic-bezier(.165,.84,.44,1)
	&.active
		display block
		.overlay
			opacity 1
		.content
			opacity 1
			visibility visible
			transform scale(1)
