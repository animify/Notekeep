.modal
	width 100%
	height 100%
	pointer-events none
	fixed top left
	z-index 12000
	h4 + p
		margin-top .4em
	.close
		width 3em
		height 3em
		border-radius 50%
		background-color dark-color-smoke
		line-height 3em
		text-align center
		fixed top 2em right 2em
		cursor pointer
		i
			color darken(dark-color-smoke, 40%)
			font-size 1.5em
			line-height 2em
		&:hover
			background-color color-primary
			i
				color #fff
	.form
		margin 1.4em 0
	.overlay
		width 100%
		height 100%
		background-color rgba(129, 131, 138, 0.77)
		opacity 0
		display table
		transition all .3s cubic-bezier(.165,.84,.44,1)
	.cell
		display table-cell
		vertical-align middle
		cf()
	.content
		width 510px
		display block
		margin 0 auto
		transform scale(.3)
		visibility hidden
		opacity 0
		position relative
		transition all .3s cubic-bezier(.165,.84,.44,1)
		background-color #fff
		border-radius border-radius-xl
		box-shadow: 0 1px 1px 0 box-shadow-gray
		overflow hidden
		h5
			font-weight 600
			margin-bottom .4rem
		p
			color text-light
	.inside
		padding 2.8em 2.8em 2.2em 2.8em
	div.error
		display none
		cf()
		padding 1.3em 0
		width 100%
		background-color lighten(light-color-red, 80%)
		position relative
		& > *
			font-weight 600
	&.active
		display block
		pointer-events all
		.overlay
			opacity 1
		.content
			opacity 1
			visibility visible
			transform scale(1)
