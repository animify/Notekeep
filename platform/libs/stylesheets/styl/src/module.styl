.module
	position relative
	background-color #fff
	border 1px solid border-gray
	border-radius border-radius-normal border-radius-normal 0 0
	padding 1.3em 2em 1.3em 3.5em
	p
		i
			absolute left 1em top .9em
			font-size 1.4em
	a
		color text-grey
		font-weight 600
		&:hover
			color color-primary
	& + .module
		border-radius 0
		border-top 0
	&:last-of-type
		border-radius 0 0 border-radius-normal border-radius-normal
	span
		color text-lighter-link
		margin-left .1em
		font-size .875em
		letter-spacing -.4px
		float right

.module + .divider.horizontal
	margin-top 2em
