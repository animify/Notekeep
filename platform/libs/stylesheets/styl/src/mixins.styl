$grid
	padding 0 grid-padding
	*zoom 1
	float left
	clear none
	text-align inherit
	margin-left 0%
	margin-right 0%
	&:before, &:after
		display table
		content ''
	&:after
		clear both

placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}

image-size(s)
	img
		width lookup('image-' + s)
		height auto

grid(n)
	width percentage(n/grid-length)

text-color(c)
	color lookup('color-' + c)

btn-o-border(c)
	border 1px solid lookup('color-' + c)

btn-border(c)
	box-shadow inset 0 0 0 1px lookup('color-' + c)

btn-size(c)
	font-size lookup('button-' + c)

btn-color(c)
	color lookup('text-button-' + c)

btn-color-outlined(c)
	color lookup('color-' + c)

btn-background(c)
	background lookup('color-' + c)

btn-background-hover(c)
	background darken(lookup('color-' + c), 10%)
